# ===================================
# CONFIGURACIÓN DE AMBIENTE
# ===================================
# Copia este archivo como .env y ajusta los valores según tu ambiente

# Ambiente de ejecución (development, production, testing, local)
NODE_ENV=development

# Región/País (colombia, argentina, mexico, brazil, chile)
REACT_APP_REGION=colombia

# ===================================
# CONFIGURACIÓN DE API
# ===================================

# URL base de la API de MercadoLibre
REACT_APP_API_BASE_URL=https://api.mercadolibre.com

# Timeout para requests de API (en milisegundos)
REACT_APP_API_TIMEOUT=10000

# ===================================
# FEATURES / FUNCIONALIDADES
# ===================================

# Habilitar logging en consola (true/false)
REACT_APP_ENABLE_LOGGING=true

# Habilitar sistema de cache (true/false)
REACT_APP_ENABLE_CACHE=true

# Habilitar sección de reviews/opiniones (true/false)
REACT_APP_ENABLE_REVIEWS=true

# Habilitar sección de preguntas y respuestas (true/false)
REACT_APP_ENABLE_QUESTIONS=true

# Habilitar recomendaciones de productos (true/false)
REACT_APP_ENABLE_RECOMMENDATIONS=true

# ===================================
# ANALYTICS Y TRACKING (OPCIONAL)
# ===================================

# Google Analytics ID (formato: GA-XXXXXXXXX o G-XXXXXXXXXX)
REACT_APP_GA_ID=

# Hotjar Site ID (solo números)
REACT_APP_HOTJAR_ID=

# Sentry DSN para tracking de errores
REACT_APP_SENTRY_DSN=

# ===================================
# DESARROLLO Y TESTING
# ===================================

# Usar datos simulados en lugar de API real (true/false)
REACT_APP_USE_MOCK_DATA=false

# Delay artificial para simular latencia de API (en milisegundos)
REACT_APP_MOCK_DELAY=1000

# TTL del cache (en milisegundos)
REACT_APP_CACHE_TTL=300000

# ===================================
# EJEMPLOS POR AMBIENTE
# ===================================

# DESARROLLO LOCAL:
# NODE_ENV=development
# REACT_APP_REGION=colombia
# REACT_APP_USE_MOCK_DATA=true
# REACT_APP_ENABLE_LOGGING=true

# TESTING:
# NODE_ENV=testing
# REACT_APP_USE_MOCK_DATA=true
# REACT_APP_ENABLE_LOGGING=true
# REACT_APP_ENABLE_CACHE=false

# PRODUCCIÓN:
# NODE_ENV=production
# REACT_APP_ENABLE_LOGGING=false
# REACT_APP_ENABLE_CACHE=true
# REACT_APP_USE_MOCK_DATA=false

# ===================================
# CONFIGURACIONES ESPECÍFICAS POR REGIÓN
# ===================================

# Para Argentina:
# REACT_APP_REGION=argentina

# Para México:
# REACT_APP_REGION=mexico

# Para Brasil:
# REACT_APP_REGION=brazil

# Para Chile:
# REACT_APP_REGION=chile
