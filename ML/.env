# Configuración del Frontend (ML Item Product)
REACT_APP_ENV=development
REACT_APP_REGION=colombia
REACT_APP_USE_MOCK_DATA=false

# Configuración de la Base de Datos
POSTGRES_DB=mlcoreplatform
POSTGRES_USER=mluser
POSTGRES_PASSWORD=mlpassword

# Configuración del Backend (ML Core Platform)
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080
JAVA_OPTS=-Xmx512m -Xms256m

# Configuración de Redis
REDIS_MAX_MEMORY=256mb

# URLs de conexión interna
DATABASE_URL=jdbc:postgresql://ml-database:5432/mlcoreplatform
REDIS_URL=redis://ml-redis:6379

# Configuración de puertos (para referencia)
FRONTEND_PORT=3000
BACKEND_PORT=8080
DB_PORT=5432
REDIS_PORT=6379
NGINX_PORT=80
